<h1 class="study__name">{{model.name}}</h1>

<div class="study__dateRange">
    <span class="glyphicon glyphicon-calendar study__dateRange--delimiter"></span> {{model.from}} - {{model.to}}
</div>

<div class="data__wrapper">
    <div class="data__row">
        <div class="data__cell--description">Ausführung: </div>
        <div class="data__cell--value data--person">{{model.executor}} <span class="glyphicon glyphicon-envelope data--person__mail"></span></div>
    </div>
    <div class="data__row">
        <div class="data__cell--description">Betreuer: </div>
        <div class="data__cell--value data--person">{{model.tutor}} <span class="glyphicon glyphicon-envelope data--person__mail"></span></div>
    </div>
    <div class="data__row">
        <div class="data__cell--description">Ort: </div>
        <div class="data__cell--value">{{model.location}}</div>
    </div>
    <div class="data__row">
        <div class="data__cell--description">Entlohnung: </div>
        <div class="data__cell--value">
            <span class="data--payment">{{model.amazon}}€ Amazon-Gutschein</span> oder <span class="data--payment">{{model.mmi}} MMI-Punkte</span>
        </div>
    </div>
    <div class="data__row">
        <div class="data__cell--description">Beschreibung: </div>
        <div class="data__cell--value">
            <div class="data--description">
                {{model.description}}
            </div>
        </div>
    </div>
    <div class="data__row">
        <div class="data__cell--description">Doodle: </div>
        <div class="data__cell--value">
            <a target="_blank" {{bind-attr href="model.doodle"}}>Zum Doodle</a>
        </div>
    </div>
</div>

<button class="btn btn-primary study__button">Zu dieser Studie anmelden</button>