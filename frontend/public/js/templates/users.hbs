<h2 class="users__heading">Alle User</h2>

<button class="btn btn-primary users__createButton">User erstellen</button>

<div class="table-responsive users__table">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    {{input type="text" classNames="form-control input-sm" placeholder="Filter User"}}
                </th>
                <th>
                    {{input type="text" classNames="form-control input-sm" placeholder="Filter Vorname"}}
                </th>
                <th>
                    {{input type="text" classNames="form-control input-sm" placeholder="Filter Nachname"}}
                </th>
                <th>
                    {{input type="text" classNames="form-control input-sm" placeholder="Filter MMI-Punkte"}}
                </th>
                <th></th>
                <th></th>
            </tr>
            <tr>
                <th>User</th>
                <th>Vorname</th>
                <th>Nachname</th>
                <th>MMI-Punkte</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each user in model}}
                <tr>
                    <td>{{user.username}}</td>
                    <td>{{user.firstname}}</td>
                    <td>{{user.lastname}}</td>
                    <td>{{user.mmi}}</td>
                    <td><span class="glyphicon glyphicon-edit users__editIcon" {{action 'showUserConfig' user}}></span></td>
                    <td><span class="glyphicon glyphicon-remove users__deleteIcon"></span></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>